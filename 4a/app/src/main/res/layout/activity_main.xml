<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtLight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:text="@string/light"
        />

    <com.google.android.material.materialswitch.MaterialSwitch
        android:id="@+id/material_switch_LIGHT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtLight"
        android:layout_below="@+id/txtLight"
        android:clickable="false"
         />

    <TextView
        android:id="@+id/txtVibration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:text="@string/vibration"
        tools:ignore="RelativeOverlap" />

    <com.google.android.material.materialswitch.MaterialSwitch
        android:id="@+id/material_switch_VIBRATION"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtVibration"
        android:layout_below="@+id/txtVibration"
        android:clickable="false"
        />

    <Button
        android:id="@+id/btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnClassifyReadings"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:onClick="onClickClassifyReadings"/>

</RelativeLayout>